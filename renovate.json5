{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:base", "github>aquaproj/aqua-renovate-config#1.5.0"],

  ignorePresets: [":prHourlyLimit2"],
  branchConcurrentLimit: 0,

  kubernetes: {
    fileMatch: ["^k8s/app/.+\\.yaml$"],
  },

  labels: ["dependencies"],
  automerge: false,
  packageRules: [
    {
      matchPackageNames: [
        "aquaproj/aqua-registry",
        "aquaproj/aqua",
        "aquaproj/aqua-installer",
      ],
      automerge: true,
    },
  ],

  reviewers: ["YunosukeY"],
}
